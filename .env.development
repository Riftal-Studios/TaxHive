# Development Environment Variables
# Copy this to .env.local for local development

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/gsthive_dev?schema=public"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="development-secret-please-change-in-production"

# Email - Amazon SES (console output for development)
EMAIL_PROVIDER="console"
AWS_SES_ACCESS_KEY_ID=""
AWS_SES_SECRET_ACCESS_KEY=""
AWS_SES_REGION="ap-south-1"
EMAIL_FROM="GST Hive Dev <dev@gsthive.local>"

# Redis
REDIS_URL="redis://localhost:6379"

# Exchange Rate API (optional for dev)
EXCHANGE_RATE_API_KEY=""

# Development Mode
NODE_ENV="development"
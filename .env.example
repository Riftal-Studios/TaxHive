# Database
# PostgreSQL (required)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/gsthive?schema=public"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="development-secret-please-change-in-production"

# Email Configuration (for magic links and invoice emails)
# Option 1: Use Ethereal Email for testing (free test SMTP)
# Get credentials at: https://ethereal.email/create
EMAIL_SERVER="smtp://username:password@smtp.ethereal.email:587"

# Option 2: Gmail (requires app password)
# EMAIL_SERVER="smtp://your-email@gmail.com:your-app-password@smtp.gmail.com:587"

# Option 3: For development without email (magic links shown in console)
# EMAIL_SERVER=""

EMAIL_FROM="GST Hive <noreply@gsthive.com>"

# Email Provider Configuration (for invoice emails)
# Options: smtp (default), sendgrid, ses, resend
EMAIL_PROVIDER="smtp"

# SendGrid Configuration
# SENDGRID_API_KEY="your-sendgrid-api-key"

# AWS SES Configuration
# AWS_SES_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SES_SECRET_ACCESS_KEY="your-aws-secret-key"
# AWS_SES_REGION="us-east-1"

# Resend Configuration
# RESEND_API_KEY="your-resend-api-key"

# Generic SMTP Configuration (if not using EMAIL_SERVER)
# SMTP_HOST="smtp.example.com"
# SMTP_PORT="587"
# SMTP_SECURE="false"  # true for 465, false for other ports
# SMTP_USER="your-smtp-username"
# SMTP_PASS="your-smtp-password"

# Cron Secret (for exchange rate updates)
CRON_SECRET="development-cron-secret"

# Redis Configuration (required for queue system)
REDIS_HOST="localhost"
REDIS_PORT="6379"
# REDIS_PASSWORD=""  # Optional: set if Redis requires authentication
# Alternative: use Redis URL format
# REDIS_URL="redis://localhost:6379"

# Exchange Rate APIs (optional - system will cascade through multiple sources)
# Note: RBI doesn't provide public API. We scrape RBI/FBIL websites first,
# then fall back to these commercial APIs if needed.

# Commercial Exchange Rate APIs (better reliability)
# CURRENCY_API_KEY="your-currencyapi-key"  # https://currencyapi.com
# FIXER_API_KEY="your-fixer-api-key"      # https://fixer.io

# Free APIs are used as final fallback (no config needed):
# - https://api.exchangerate-api.com/v4/latest/INR
# - https://api.frankfurter.app/latest
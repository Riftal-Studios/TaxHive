# Database
# Option 1: PostgreSQL (production-like)
# DATABASE_URL="postgresql://postgres:postgres@localhost:5432/freelancehive?schema=public"

# Option 2: SQLite (easier for local development - recommended for quick start)
DATABASE_URL="file:./dev.db"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="development-secret-please-change-in-production"

# Email Configuration (for magic links)
# Option 1: Use Ethereal Email for testing (free test SMTP)
# Get credentials at: https://ethereal.email/create
EMAIL_SERVER="smtp://username:password@smtp.ethereal.email:587"

# Option 2: Gmail (requires app password)
# EMAIL_SERVER="smtp://your-email@gmail.com:your-app-password@smtp.gmail.com:587"

# Option 3: For development without email (magic links shown in console)
# EMAIL_SERVER=""

EMAIL_FROM="FreelanceHive <noreply@freelancehive.local>"

# Cron Secret (for exchange rate updates)
CRON_SECRET="development-cron-secret"

# Optional: Redis URL (if you have Redis installed)
# REDIS_URL="redis://localhost:6379"

# External APIs (optional - will use fallback if not provided)
# RBI_API_URL="https://api.rbi.org.in/api/Forex/GetExchRate"
# EXCHANGE_RATES_API_KEY="your-api-key"
# Production Environment Variables Template for gsthive.com
# Copy this file to .env.production and fill in all values

# Database Configuration
POSTGRES_USER=gsthive
POSTGRES_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD
POSTGRES_DB=gsthive

# Redis Configuration
REDIS_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD

# NextAuth Configuration
NEXTAUTH_URL=https://gsthive.com
NEXTAUTH_SECRET=CHANGE_THIS_TO_64_CHAR_RANDOM_STRING
# Generate with: openssl rand -base64 64

# Email Configuration (SMTP)
EMAIL_SERVER=smtp://username:password@smtp.example.com:587
EMAIL_FROM=GST Hive <noreply@gsthive.com>
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@gsthive.com

# AWS S3 Configuration (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=gsthive-uploads

# Exchange Rate APIs
RBI_API_KEY=your-rbi-api-key-if-required
EXCHANGE_RATE_API_KEY=your-exchangerate-api-key

# Internal Cron Secret
CRON_SECRET=CHANGE_THIS_TO_RANDOM_STRING
# Generate with: openssl rand -hex 32

# Cloudflare Tunnel Token
CLOUDFLARE_TUNNEL_TOKEN=YOUR_TUNNEL_TOKEN_FROM_CLOUDFLARE

# Optional: Sentry for error tracking
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# Optional: Analytics
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=
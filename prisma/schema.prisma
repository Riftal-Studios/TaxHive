// Smart Inbox - Document Upload for AI-powered classification
model DocumentUpload {
  id               String @id @default(cuid())
  userId           String
  filename         String // Stored filename (e.g., cuid-based)
  originalFilename String // Original uploaded filename
  mimeType         String // application/pdf, image/png, text/csv
  fileSize         Int // Size in bytes
  fileUrl          String // S3/storage URL

  // Source information
  sourceType     DocumentSourceType
  sourcePlatform String? // e.g., "upwork.com", "aws.amazon.com"

  // Processing status
  status          DocumentStatus @default(PENDING)
  processingJobId String? // Queue job ID

  // AI Classification results
  classification    DocumentClassification?
  confidenceScore   Decimal? // 0-100 confidence score
  rawExtractionData Json? // Raw AI response
  extractedData     Json? // Structured extracted data

  // Key extracted fields for quick filtering
  extractedAmount      Decimal?
  extractedCurrency    String?
  extractedDate        DateTime?
  extractedVendorName  String?
  extractedVendorGstin String?

  // Review workflow
  reviewStatus ReviewStatus @default(PENDING_REVIEW)
  reviewedAt   DateTime?
  reviewNotes  String?

  // Link to created invoice (when converted)
  linkedInvoiceId String? @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  linkedInvoice Invoice? @relation(fields: [linkedInvoiceId], references: [id])

  @@index([userId, status, reviewStatus])
  @@index([sourceType])
  @@index([classification])
  @@index([createdAt])
}

// GST Filing Period - Track GSTR-1 and GSTR-3B filing plans
model GSTFilingPeriod {
  id         String       @id @default(cuid())
  userId     String
  filingType FilingType // GSTR1 or GSTR3B
  period     String // YYYY-MM format (e.g., "2024-01")
  fiscalYear String // YYYY-YY format (e.g., "2024-25")
  status     FilingStatus @default(DRAFT)
  dueDate    DateTime

  // Summary totals
  totalTaxableValue Decimal @default(0)
  totalIgstAmount   Decimal @default(0)
  totalCgstAmount   Decimal @default(0)
  totalSgstAmount   Decimal @default(0)
  totalTaxAmount    Decimal @default(0)

  // ITC Summary (for GSTR-3B)
  totalItcIgst  Decimal @default(0)
  totalItcCgst  Decimal @default(0)
  totalItcSgst  Decimal @default(0)
  netTaxPayable Decimal @default(0)

  // Workflow timestamps
  generatedAt DateTime?
  approvedAt  DateTime?
  filedAt     DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  planItems FilingPlanItem[]

  @@unique([userId, filingType, period])
  @@index([userId, status, dueDate])
  @@index([fiscalYear])
}

// Filing Plan Item - Individual items in GSTR-1/3B filing plan
model FilingPlanItem {
  id             String  @id @default(cuid())
  filingPeriodId String
  invoiceId      String? // Link to source invoice

  // Invoice details (denormalized for filing)
  invoiceNumber String
  invoiceDate   DateTime?

  // GSTR Table classification
  gstrTable String // "4A", "5", "6A", "9B", "3.1a", "3.1b", "3.1d", etc.

  // Recipient/Supplier details
  recipientGstin String?
  recipientName  String?

  // Tax amounts
  taxableValue Decimal
  igstAmount   Decimal @default(0)
  cgstAmount   Decimal @default(0)
  sgstAmount   Decimal @default(0)

  // Validation
  confidenceScore  Int   @default(100) // 0-100
  flags            Json? // Array of flag objects {code, message, severity}
  validationErrors Json? // Array of validation error messages

  // Manual adjustments
  isManuallyAdjusted Boolean @default(false)
  adjustmentNotes    String?
  isIncluded         Boolean @default(true) // Can exclude from filing

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  filingPeriod GSTFilingPeriod @relation(fields: [filingPeriodId], references: [id], onDelete: Cascade)
  invoice      Invoice?        @relation(fields: [invoiceId], references: [id])

  @@index([filingPeriodId, gstrTable])
  @@index([invoiceId])
}

// GSTR-2B Upload - Store uploaded GSTR-2B JSON files
model GSTR2BUpload {
  id           String   @id @default(cuid())
  userId       String
  gstin        String // User's GSTIN
  returnPeriod String // MMYYYY format (e.g., "012024")
  uploadDate   DateTime @default(now())
  fileName     String? // Original filename
  rawJson      Json? // Complete GSTR-2B JSON

  // Processing status
  status          String  @default("PROCESSING") // PROCESSING, COMPLETED, FAILED
  errorMessage    String?
  entriesCount    Int     @default(0)
  matchedCount    Int     @default(0)
  mismatchedCount Int     @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  entries GSTR2BEntry[]

  @@unique([userId, returnPeriod])
  @@index([userId])
  @@index([returnPeriod])
}

// GSTR-2B Entry - Individual entries from GSTR-2B for reconciliation
model GSTR2BEntry {
  id       String @id @default(cuid())
  uploadId String

  // Vendor details from 2B
  vendorGstin String
  vendorName  String?

  // Invoice details from 2B
  invoiceNumber String
  invoiceDate   DateTime
  invoiceValue  Decimal // Total invoice value
  taxableValue  Decimal

  // Tax amounts from 2B
  igst Decimal @default(0)
  cgst Decimal @default(0)
  sgst Decimal @default(0)
  cess Decimal @default(0)

  // 2B specific fields
  supplyType      String? // B2B, B2BA, CDNR, etc.
  itcAvailability String? // Y/N from 2B
  reason          String? // Reason code if ITC not available

  // Reconciliation status
  matchStatus      ITCMatchStatus @default(PENDING)
  matchedInvoiceId String? // Link to matched purchase invoice
  matchConfidence  Float? // 0-1 confidence score
  mismatchDetails  Json? // Details of what doesn't match

  // Manual resolution
  manuallyResolved Boolean   @default(false)
  resolutionNotes  String?
  resolvedAt       DateTime?
  resolvedBy       String? // User ID who resolved

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  upload         GSTR2BUpload @relation(fields: [uploadId], references: [id], onDelete: Cascade)
  matchedInvoice Invoice?     @relation(fields: [matchedInvoiceId], references: [id])

  @@index([uploadId, matchStatus])
  @@index([vendorGstin, invoiceNumber])
  @@index([matchedInvoiceId])
}

// ITC Ledger - Track Input Tax Credit by period
model ITCLedger {
  id           String @id @default(cuid())
  userId       String
  returnPeriod String // MMYYYY format

  // ITC from RCM (self-assessed, always claimable)
  rcmIgst Decimal @default(0)
  rcmCgst Decimal @default(0)
  rcmSgst Decimal @default(0)

  // ITC from B2B purchases (matched with 2B)
  b2bIgst Decimal @default(0)
  b2bCgst Decimal @default(0)
  b2bSgst Decimal @default(0)

  // ITC at risk (in 2B but not claimed / mismatch)
  atRiskIgst Decimal @default(0)
  atRiskCgst Decimal @default(0)
  atRiskSgst Decimal @default(0)

  // Net ITC available
  netIgst Decimal @default(0)
  netCgst Decimal @default(0)
  netSgst Decimal @default(0)

  // Accumulated ITC for refund (exports)
  accumulatedItc Decimal @default(0)

  lastUpdated DateTime @updatedAt
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, returnPeriod])
  @@index([userId])
  @@index([returnPeriod])
}

enum FeedbackType {
  BUG
  FEATURE
  QUESTION
  OTHER
}

enum FeedbackStatus {
  NEW
  REVIEWED
  RESOLVED
}

enum InvoiceType {
  EXPORT // Standard export invoice (current behavior)
  SELF_INVOICE // RCM self-invoice for unregistered suppliers
}

enum PaymentMode {
  CASH
  BANK_TRANSFER
  CHEQUE
  UPI
  OTHER
}

// ============================================================================
// Phase 1: New Enums for Full GST Implementation
// ============================================================================

// Supplier types (extended RCM support)
enum SupplierType {
  INDIAN_UNREGISTERED // Current - requires state/stateCode
  FOREIGN_SERVICE // Import of services (AWS, Figma, GitHub, etc.)
}

// RCM classification for GSTR-3B reporting
enum RcmType {
  INDIAN_UNREGISTERED // Report in GSTR-3B 3.1(d)
  IMPORT_OF_SERVICES // Report in GSTR-3B 3.1(a)
}

// Document upload source types for Smart Inbox
enum DocumentSourceType {
  UPWORK
  TOPTAL
  CLIENT_INVOICE
  VENDOR_BILL
  BANK_STATEMENT
  SCREENSHOT
  OTHER
}

// Document processing status
enum DocumentStatus {
  PENDING
  PROCESSING
  PROCESSED
  FAILED
}

// AI classification categories for uploaded documents
enum DocumentClassification {
  EXPORT_WITH_LUT // Foreign client, forex payment
  EXPORT_WITHOUT_LUT // Alert: need to file LUT
  DOMESTIC_B2B // Registered Indian client
  DOMESTIC_B2C // Unregistered Indian client
  PURCHASE_ITC // Vendor bill with GST
  PURCHASE_RCM // Unregistered vendor / import of services
  UNKNOWN // Manual classification needed
}

// Review status for inbox documents
enum ReviewStatus {
  PENDING_REVIEW // Awaiting review
  AUTO_APPROVED // High confidence (90-100%)
  REVIEW_RECOMMENDED // Medium confidence (70-89%)
  MANUAL_REQUIRED // Low confidence (<70%)
  APPROVED // Manually approved
  REJECTED // Rejected by user
  CONVERTED // Converted to invoice
}

// GST filing types
enum FilingType {
  GSTR1
  GSTR3B
}

// Filing status workflow
enum FilingStatus {
  DRAFT
  GENERATED
  IN_REVIEW
  APPROVED
  FILED
  AMENDED
}

// ITC match status for reconciliation
enum ITCMatchStatus {
  PENDING
  MATCHED // All match - claim ITC
  AMOUNT_MISMATCH // Values differ - review needed
  NOT_IN_2B // You have invoice, not in 2B - follow up with vendor
  IN_2B_ONLY // In 2B, you don't have invoice - verify purchase
  REJECTED // Mismatch too large - cannot claim
  MANUALLY_RESOLVED
}
